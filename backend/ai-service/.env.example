# Application
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8001
WORKERS=1

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=["*"]

# Database
DATABASE_URL=postgresql+asyncpg://hospital_user:hospital_pass@localhost:5432/hospital_ai_db

# Redis
REDIS_URL=redis://localhost:6379/1

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
KAFKA_GROUP_ID=ai-service-group

# ML Models
MODEL_STORAGE_PATH=./models
MODEL_CACHE_TTL=3600
MODEL_AUTO_RELOAD=false
SKIP_MODEL_LOADING=false

# Monitoring
LOG_LEVEL=INFO
PROMETHEUS_METRICS_PORT=9090

# AI/ML Configuration
MAX_BATCH_SIZE=32
MODEL_CACHE_SIZE=10
PREDICTION_TIMEOUT=30
RISK_PREDICTION_THRESHOLD=0.7
NO_SHOW_PREDICTION_THRESHOLD=0.5
